{
  "bindings": [
    {
      "name": "inputBlob",
      "type": "blobTrigger",
      "direction": "in",
      "path": "raw/{name}",
      "connection": "your_connection"
    },
    {
      "name": "outputBlob",
      "type": "blob",
      "direction": "out",
      "path": "yourpathname/{name}.txt",
      "connection": "your_azure_connection"
    }
  ]
}
